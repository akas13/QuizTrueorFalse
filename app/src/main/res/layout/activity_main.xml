<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.quiztrueorfalse.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Welcome to the quiz!"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Question 1 True or False: Lightning never strikes the same spot twice?" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/true_q1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="isClicked1"
            android:text="True " />

        <RadioButton
            android:id="@+id/false_q1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="isClicked1"
            android:text="False " />

    </RadioGroup>

    <TextView
        android:id="@+id/ans1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Question 2 What maximum speed can the air of a human sneeze reach? 60 km/h 100 km/h 160 km/h?" />

    <EditText
        android:id="@+id/ansq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Please enter answer here, number only"
        android:inputType="number" />

    <TextView
        android:id="@+id/ans2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Question 3: Washington is a name for?" />

    <CheckBox
        android:id="@+id/city_q3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="US City" />

    <CheckBox
        android:id="@+id/person_q3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historical Person " />

    <CheckBox
        android:id="@+id/state_q3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="US State " />

    <TextView
        android:id="@+id/ans3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Question 4 True or False: The computer of the Lunar Module Eagle had a random access memory (RAM) of only 4 kilobits?" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/true_q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="isClicked4"
            android:text="True " />

        <RadioButton
            android:id="@+id/false_q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="isClicked4"
            android:text="False " />

    </RadioGroup>

    <TextView
        android:id="@+id/ans4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submit"
        android:paddingBottom="10dp"
        android:paddingTop="12dp"
        android:text="Submit!" />


</LinearLayout>
</ScrollView>